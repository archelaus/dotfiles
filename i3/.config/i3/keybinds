##############################################################
# ----------------------- KEYBINDINGS ----------------------- #
###############################################################

# -- Audio (Fn) keybinds
# set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status

# -- Brightness (Fn) keybinds
# Requirement: brightnessctl
# bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/i3/scripts/brightness-control up
# bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/scripts/brightness-control down

# -- Map power off button to dmenu/rofi
# bindsym XF86PowerOff exec --no-startup-id "rofi -show power-menu -modi power-menu:rofi-power-menu"

# -- Start a terminal
bindsym $mod+Return exec --no-startup-id alacritty

# -- Kill focused window
bindsym $mod+Shift+q kill

# -- Launch app menu
# bindsym $mod+d exec --no-startup-id "rofi -show combi -combi-modi drun,window -icon-theme Papirus -show-icons"
bindsym $mod+d exec --no-startup-id j4-dmenu-desktop

# -- dm-hub
bindsym $mod+b exec --no-startup-id ~/.config/rofi/scripts/dm-hub

# -- Reload the configuration file
bindsym $mod+Shift+c reload

# -- Enter resize mode
bindsym $mod+r mode "resize"

# -- Restart i3
bindsym $mod+Shift+r restart

# -- Exit i3
# bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning \
#    -m 'Exit i3? This will end your X session.' \
#    -B 'Yes, exit i3' 'i3-msg exit'"
# bindsym $mod+Shift+e exec "rofi -show power-menu -modi power-menu:rofi-power-menu"
# (Alt) powermenu
# Source: https://github.com/BIBJAW/Final_Rice/blob/main/MYDE/i3/scripts/powermenu
bindsym $mod+Shift+e exec --no-startup-id ~/.config/rofi/powermenu/rofi-powermenu-gruvbox

#-- Screenshot
# bindsym Print exec --no-startup-id flameshot full
# bindsym $mod+Insert exec --no-startup-id flameshot gui
# bindsym $mod+Home exec --no-startup-id ~/.config/rofi/scripts/rofi-screenshot
# bindsym $mod+End exec --no-startup-id ~/.config/rofi/scripts/rofi-screenshot -s
bindsym $mod+Home exec --no-startup-id ~/.config/rofi/scripts/dm-maim

# -- Lock screen with betterlockscreen
# bindsym $mod+x exec --no-startup-id betterlockscreen -l

# -- Lock screen with modified i3lock
bindsym $mod+Shift+x exec --no-startup-id ~/.config/i3/scripts/i3lock-extra

# [NYI] Launch btop
# bindsym $mod+F11 exec --no-startup-id alacritty -e btop

# -- Silent urgent windows
bindsym $mod+semicolon [urgent="latest"] focus
bindsym $mod+Shift+semicolon exec --no-startup-id ~/.config/i3/scripts/silence

# -- Caps Lock indicator
mode "caps" {
  bindsym Caps_Lock mode "default"
}
bindsym Caps_Lock mode "caps"

# -- Num Lock indicator
mode "num" {
  bindsym Num_Lock mode "default"
}
bindsym Num_Lock mode "num"

# -- Emoji picker using rofi
bindsym $mod+g exec ~/.config/rofi/scripts/rofi-emoji

# -- Calculations using rofi
bindsym $mod+t exec --no-startup-id rofi -theme arthur -modi calc -show calc -calc-command 'xdotool type --clearmodifiers "{result}"' > /dev/null

# -- dmenu
bindsym $mod+period exec --no-startup-id ~/.config/rofi/scripts/dm-actonlast

# -- greenclip
bindsym $mod+Insert exec --no-startup-id greenclip print | grep . | dmenu -i -l 10 -p clipboard | xargs -r -d'\n' -I '{}' greenclip print '{}'
# rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'
# rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}' ; sleep 0.5; xdotool type $(xclip -o -selection clipboard)
# bindsym $mod+Insert exec --no-startup-id rofi -modi "Clipboard:greenclip print" -show Clipboard -run-command '{cmd}' -theme ~/.config/rofi/selmenu.rasi

# -- Play music in style
bindsym $mod+m exec --no-startup-id alacritty -T Musicc -e tmux-music &

