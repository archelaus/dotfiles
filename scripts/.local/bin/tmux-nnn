#!/usr/bin/env bash

tmuxs() {
  $TERMINAL --class fm -e tmux $*;
}

declare -A sessions=()
for name in $(tmux ls -F "#{session_name}"); do
  sessions["$name"]="$name"
done

session_name="files"
if ! [[ -v sessions["$session_name"] ]]; then
  tmuxs new-session -s "$session_name" "nnn -a -P p"\; set -t "$session_name" status off
fi
